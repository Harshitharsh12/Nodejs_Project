    <div class="flex justify-end">
      <form action="/logout">
        <input
          type="submit"
          value="Logout"
          class="bg-red-600 text-white rounded-sm border-red px-2 py-1 m-4 mb-2"
        />
      </form>
    </div>
    <div class="flex flex-col items-center text-zinc-200">
      <h1 class="text-4xl mb-2">Hello Guys,This is My Profile Page:</h1>
      <p class="mb-2 text-zinc-500">You can create new post here:</p>
      <form
        action="/post"
        method="post"
        class="flex flex-col gap-2 align-center"
      >
        <textarea
          name="content"
          placeholder="What's on your mind?"
          id=""
          class="resize-none w-96 h-20 placeholder-white text-blue-800 mt-10 bg-zinc-400 p-2 rounded-md"
        ></textarea>
        <input
          type="text"
          placeholder="Enter the Url of the Picture:"
          class="rounded-md bg-zinc-400 placeholder-white p-2 text-blue-600"
          name="url"
        />
        <input
          type="submit"
          class="bg-blue-800 p-2 rounded-md text-white text-xl w-40 ml-28"
          value="Create Post"
        />
      </form>
    </div>
    <div class="m-24 text-white flex flex-col items-center">
      <h1 class="text-4xl">Posts:</h1>
      <% user.posts.reverse().forEach(function(post){ %>
      <div
        class="ml-10 posts flex flex-col m-4 p-4 bg-zinc-600 w-2/5 rounded-lg bg-[url('<%= post.img %>')] bg-no-repeat bg-contain hover:bg-cover bg-right hover:bg-top"
      >
        <h1 class="mt-1 text-2xl">Created By : <%=user.username%></h1>
        <!-- <h1 class="inline">
